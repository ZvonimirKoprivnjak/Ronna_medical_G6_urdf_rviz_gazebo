<launch>
        <let name="urdf_robot_path" 
            value="$(find-pkg-share robot_description_vjezba)/urdf/robot.urdf"/>

        <let name="urdf_robot_path_xacro" 
            value="$(find-pkg-share robot_description_vjezba)/urdf/robot_main.urdf.xacro"/>

        <let name="rviz_config_path"
            value="$(find-pkg-share robot_description_vjezba)/rviz/urdf_config.rviz" />   

        
    <!--pozivi robota na kojem se ucilo-->

        <node pkg="robot_state_publisher" exec="robot_state_publisher">
                <param name="robot_description"
                        value="$(command 'xacro $(var urdf_robot_path)')" /> 
        </node> 

        <!-- <node pkg="robot_state_publisher" exec="robot_state_publisher">
